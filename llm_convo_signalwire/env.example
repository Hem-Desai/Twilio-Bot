# App Configuration
DEBUG=false
DOMAIN=your-domain.ngrok.io  # or your production domain

# SignalWire Configuration (Get from https://signalwire.com)
SIGNALWIRE_PROJECT_ID=your-project-id-here
SIGNALWIRE_TOKEN=your-signalwire-token-here
SIGNALWIRE_SPACE_URL=your-space.signalwire.com
SIGNALWIRE_PHONE_NUMBER=+1234567890

# AI Services
GROQ_API_KEY=your-groq-api-key-here
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# AWS (for Polly TTS)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Redis (Optional - defaults to localhost)
REDIS_URL=redis://localhost:6379

# Audio Configuration
AUDIO_DIR=app/static/audio

# LLM Configuration
GROQ_MODEL=llama3-8b-8192
MAX_TOKENS=500
TEMPERATURE=0.7

# TTS Configuration  
POLLY_VOICE_ID=Joanna
POLLY_ENGINE=neural

# Business Search Configuration
MAX_SEARCH_RESULTS=5
MIN_RATING=4.0 

